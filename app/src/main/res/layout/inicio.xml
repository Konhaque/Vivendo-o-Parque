<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:background="@drawable/balao_fala"
                android:layout_marginLeft="190dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seja bem vindo! Você está visitando o Parque de Pituaçu, Fica à vontade para conhece-lo. Clique nos botões abaixo para ter mais informações sobre ele!"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"/>
            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginTop="-100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/app_propraganda"
                />
            <Button
            android:id="@+id/historia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:layout_marginTop="-200dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="30dp"
            android:text="História"
            android:textColor="#fff"/>
            <Button
                android:id="@+id/fauna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="30dp"
                android:text="Fauna"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/flora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="30dp"
                android:text="Flora"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>